<div id="commentform">
<h3>Add a comment:</h3>
<%= form_for([@image, @image.imagecomments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
  <br>
    <%= f.submit "Submit" %>
  </div>
<% end %>
</div>